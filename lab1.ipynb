import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt


i=1
fall=None
while i<=31:
    file_name="d:/vuz/andre/dsbd/lab1/doing_data_science/dds_datasets/dds_ch2_nyt/nyt"+str(i)+".csv"
    f1=pd.read_csv(file_name,sep=",")
